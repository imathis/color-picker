{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"style": {
				"noNonNullAssertion": "warn"
			},
			"performance": {
				"noAccumulatingSpread": "warn"
			},
			"suspicious": {
				"noShadowRestrictedNames": "warn",
				"useIterableCallbackReturn": "warn",
				"noAssignInExpressions": "warn",
				"noDuplicateProperties": "warn"
			},
			"a11y": {
				"noSvgWithoutTitle": "warn",
				"useGenericFontNames": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
